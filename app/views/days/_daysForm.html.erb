
  <div class="col-md-4 col-md-offset-4">
    <div class="row">
      <ul class="days">
        <li>
          <div class="">
            <%= form_for(@days) do |f| %>

              <p><%= f.label :name %></p>
              <%= f.text_field :name, class: 'form-control txt' %>

              <p><%= f.label :daysGiven %></p>

              <p><%= f.label :daysTaken %></p>
              <%= f.date_field :daysTaken, type: 'date', class: 'form-control txt' %>

              <p><%= f.label :dateTaken %></p>
              <%= f.date_field :dateTaken, type: 'date', class: 'form-control' %>

              <br>
              <%= f.submit "Submit Request", class: 'btn btn-primary'  %>


            </div>
          </li>
        </ul>
    </div>
  </div>
<% end %>
