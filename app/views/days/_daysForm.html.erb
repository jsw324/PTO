
  <div class="col-md-4 col-md-offset-4">
    <div class="row">
      <ul class="days">

          <div class="">
            <%= form_for(@days) do |f| %>

              <p><%= f.label :daysTaken, 'How many days?' %></p>
              <%= f.text_field :daysTaken, class: 'form-control' %>
              <br>
              <p><%= f.label :dateTaken, 'Enter the Date' %></p>
              <%= f.date_field :dateTaken, type: 'date', class: 'form-control' %>

              <br>
              <%= f.submit "SUBMIT REQUEST", class: 'btn btn-primary btn-block'  %>

            </div>

        </ul>
    </div>
  </div>
<% end %>
