<h1 class="text-center">Days Taken - Admin View</h1>
  <div class="dropdown center-block">
    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Pick Employee
    <span class="caret"></span></button>
    <ul class="dropdown-menu">
      <% @users.each do |f| %>
      <li><%= f.name %></li>
      <% end %>
    </ul>
  </div>
<div class="container">


  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Days Left</th>
          <th>Requested Days</th>
          <th>Requested Date</th>
          <th>Notes</th>
        </tr>
      </thead>

      <tbody>
        <% @days.each do |f| %>
        <tr>
          <td><%= f.name %></td>
          <td><%= f.daysLeft %></td>
          <td><%= f.daysTaken %></td>
          <td><%= f.dateTaken.strftime("%A %B %d, %Y") %></td>
          <td><%= f.note %></td>
        </tr>
        <% end %>

      </tbody>
    </table>
  </div>
</div>
